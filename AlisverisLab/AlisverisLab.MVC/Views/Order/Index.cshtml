@model List<OrderDetailDTO>

<main class="main">

    <!-- Page Title -->
    <div class="page-title light-background">
        <div class="container d-lg-flex justify-content-between align-items-center">
            <h1 class="mb-2 mb-lg-0">Orders</h1>
            <nav class="breadcrumbs">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="current">Orders</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- End Page Title -->
    <!-- Orders Section -->
    <section id="order" class="order section">
        <div class="container" data-aos="fade-up" data-aos-delay="100">

            @if (Model == null || Model.Count == 0)
            {
                <div class="text-center">
                    <h3>Your order list is empty.</h3>
                </div>
            }
            else
            {
                <div class="row g-4">
                    <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
                        <div class="cart-items">
                            <div class="cart-header d-none d-lg-block">
                                <div class="row align-items-center gy-4">
                                    <div class="col-lg-6">
                                        <h5>Product</h5>
                                    </div>
                                    <div class="col-lg-2 text-center">
                                        <h5>Price</h5>
                                    </div>
                                </div>
                            </div>

                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="cart-item" data-aos="fade-up" data-aos-delay="@(i * 100)">
                                    <div class="row align-items-center gy-4">
                                        <div class="col-lg-6 col-12 mb-3 mb-lg-0">
                                            <div class="product-info d-flex align-items-center">
                                                <div class="product-image me-3">
                                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model[i].ProductId">
                                                        <img style="width:100px;" src="@Url.Content(Model[i].ImagePath)" alt="@Model[i].ProductName" class="img-fluid" loading="lazy">
                                                    </a>
                                                </div>
                                                <div class="product-details">
                                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model[i].ProductId">
                                                        <h6 class="product-title">@Model[i].ProductName</h6>
                                                    </a>
                                                    <div class="product-meta">
                                                        <span class="product-color">Color: Black</span>
                                                        <span class="product-size">Size: M</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 col-lg-2 text-center">
                                            <div class="price-tag">
                                                <span class="current-price">@Model[i].Price ₺</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                            }                          
                        </div>
                    </div>
                </div>
            }

        </div>
    </section>
</main>

