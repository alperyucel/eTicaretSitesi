@model LoginModel
<!-- Login Form -->
<div class="tab-pane fade show active" id="login-register-login-form" role="tabpanel">
    <form asp-controller="Account" asp-action="Login" method="post">
        @*<div asp-validation-summary="All" class="text-danger mb-3"></div>*@
        <div class="mb-4">
            <span asp-validation-for="UserName" class="text-danger"></span>
            <label for="login-register-login-username" class="form-label"></label>
            <input asp-for="UserName" type="text" placeholder="Username" class="form-control" id="login-register-login-username">           
        </div>

        <div class="mb-4">
            <span asp-validation-for="Password" class="text-danger"></span>
            <label for="login-register-login-password" class="form-label"></label>
            <input asp-for="Password" type="password" placeholder="Password" class="form-control" id="login-register-login-password">             
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
                <input asp-for="IsRemember" type="checkbox" class="form-check-input" id="login-register-remember-me">
                <label class="form-check-label" for="login-register-remember-me">Remember me</label>
            </div>
            <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">Forgot Password?</a>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Login</button>
        </div>
    </form>
</div>